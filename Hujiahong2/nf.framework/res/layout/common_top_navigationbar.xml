<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_top_title_part_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:layout_alignParentTop="true"
    android:background="@color/common_navigate_bg" >

    <!-- zuo -->

    <ImageButton
        android:id="@+id/common_base_toptitle_left_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_navigate_btn_selector"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:contentDescription="" />

    <!-- 右 -->

    <RelativeLayout
        android:id="@+id/common_base_toptitle_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

         <!-- 右侧文字按钮 -->
         <TextView
            android:id="@+id/common_base_toptitle_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="13dp"
            android:background="@drawable/common_navigate_btn_selector"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/common_base_toptitle_right_txt2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/common_base_toptitle_right_txt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
        <!-- 右侧图片按钮 -->

        <ImageButton
            android:id="@+id/common_base_toptitle_right_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/common_navigate_btn_selector"
            android:scaleType="centerInside"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/common_base_toptitle_right_img2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/common_base_toptitle_right_img"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/common_navigate_btn_selector"
            android:scaleType="centerInside"
            android:visibility="gone" />
        <!-- 右侧图片上方文字 -->

         <TextView
            android:id="@+id/common_base_toptitle_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/common_navigate_txt_update_bg"
            android:visibility="gone" />
         
         
         
    </RelativeLayout>

    <TextView
        android:id="@+id/common_base_top_title_textview"
        style="@style/common_navigate_title_style"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp" />

    <View
        android:id="@+id/common_base_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"

        android:layout_alignParentBottom="true"
        />

</RelativeLayout>