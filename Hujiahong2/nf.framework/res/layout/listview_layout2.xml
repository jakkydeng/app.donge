<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- 列表请求为空时 显示view -->
    <LinearLayout android:id="@+id/common_listview_empty_layout"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:gravity="center"
        />
	<!-- 列表展示数据 android:overScrollMode="never"  解决魅族列表悬停问题-->
	<nf.framework.expand.widgets.pulltorefresh.PullToRefreshListView
	    android:id="@+id/common_listview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:cacheColorHint="#00000000"
	    android:divider="@color/_EEEEEE"
	    android:dividerHeight="0dp"
	    android:fadeScrollbars="true"
	    android:overScrollMode="never" 
	    android:fadingEdge="none"
	    android:headerDividersEnabled="false"
	    android:scrollingCache="false" />
	
</FrameLayout>