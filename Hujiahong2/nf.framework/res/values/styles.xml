<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="compose_addr_view_input">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:minHeight">34.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:dropDownHeight">wrap_content</item>
    </style>

    <style name="compose_addr_view_input_subject">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">34.0dip</item>
        <item name="android:minHeight">34.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:dropDownHeight">wrap_content</item>
    </style>

    <style name="compose_addr_view_btn_add">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">32.0dip</item>
        <item name="android:layout_height">32.0dip</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="compose_sign_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff444444</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="compose_addr_groupselector_wrap">
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34.0dip</item>
        <item name="android:minHeight">34.0dip</item>
    </style>

    <!-- 搜索控件 样式  <item name="android:dropDownVerticalOffset">2dip</item> -->
    <style name="autocompletetextview_style" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/common_half_rounded_autotext_bg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>
    <!-- 搜索列表 收藏column列表，产品column列表  标题展示样式 -->
    <style name="column_item_title_style">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 搜索列表 收藏column列表，产品column列表  内容展示样式 -->
    <style name="column_item_content_style">
        <item name="android:textColor">#94a094</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listview_style">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:divider">@color/common_layout_bg</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

</resources>